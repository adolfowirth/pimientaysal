<!DOCTYPE html>
<html>
  
  <%- include('./partials/head', {titulo : "Pimienta & Sal desde Cero", cssSheet: "style"}) %> 
  <body>
   
    <%- include('./partials/navbar') %> 
    <%- include('./partials/header') %> 

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="<%= about.img %> "
            class="ps-round ps-image ps-opacity-min"
            alt="<%= about.alt %> "
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%= about.titulo %> </h1>
          <br />
          <p class="ps-large">
            <%= about.textoPrincipal %> 
            <span class="ps-tag ps-light-grey"><%= about.textoPrincipal1 %> </span> <%= about.textoPrincipal2 %>
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= about.textoFinal %> 
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />

         
          
          <% for(let row of menu){ %> 
            <h4>
              <a href="detalle/<%= row.id %> ">
                <%= row.nombre %> 
              </a>
            </h4>
            
            <p class="ps-text-grey">
              <%= row.descripcion %> 
              <%= row.precio %> 
            </p>
            <br>
            
            <% } %> 
            
      </div>
      
            <div class="ps-col l6 ps-padding-large ps-img-menu">
              <img
                src="/images/menu.jpg"
                class="ps-round ps-image ps-opacity-min"
                alt="Menu" />
            </div>
          </div>

          <%- include ('./partials/footer') %> 

    </div>
  </body>
  
</html>
